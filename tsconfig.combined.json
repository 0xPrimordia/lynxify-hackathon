{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "target": "ES2020",
    "isolatedModules": false,
    "noEmit": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "combined-server.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 