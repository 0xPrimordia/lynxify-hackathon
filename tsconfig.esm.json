{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-esm",
    "rootDir": ".",
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
} 