{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "target": "es2016",
    "isolatedModules": false,
    "noEmit": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": false
  },
  "include": [
    "server.ts",
    "src/server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app",
    "src/__tests__"
  ]
} 